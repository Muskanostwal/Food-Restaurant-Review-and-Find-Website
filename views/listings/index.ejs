<% layout("/layouts/boilerplate") %>

    <h2>Welcome to zomyto</h2>
    
    <!-- <form method="GET" action="/listings/new">
        <button>NEW POST</button>
        </form>  we don't need this button any more as we created option of add listing in navbar -->

        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%=listing._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img class="card-img-top" src="<%= listing.image%>" alt="Card image cap" style="height: 20rem"/>
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title%></b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> /plate
                            </p>
                        </div>
                </a>
                
            </div>
            <%}%>
        </div>
        


